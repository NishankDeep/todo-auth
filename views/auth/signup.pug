extends ../index.pug 

block style 
    link(rel="stylesheet", href="./css/auth.css")

block content 

    div( class="container h-100 ")
    div( class="row h-100 justify-content-center align-items-center")
        div( class="col-10 col-md-8 col-lg-6")
            //-  Form 
            form( class="form-example containForm" action="/sign-up" method="post")
                h1 Sign Up
                //-  Input fields 
                div( class="form-group form")
                    label( for="username") Username:
                    input( type="text" class=" username" id="" placeholder="Email..." name="email")
                div( class="form-group form")
                    label( for="password") Password:
                    input( type="password" class=" password" id="password" placeholder="Password..." name="password")

                div( class="form-group form")
                    label( for="password") Confirm Password:
                    input( type="password" class="password" id="ConfirmPassword" placeholder="Confirm Password..." name="confirmPassword")

    
                button( type="submit" class="btn btnForm ")  Sign Up 

                //- <!-- End input fields -->

                p( class="copyright") Have an account? 
                    a( href="/") Login
                input(type="hidden", name="_csrf" value=`${csrfToken}`)
